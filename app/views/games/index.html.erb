<p id="notice"><%= notice %></p>


<%= form_tag games_path, :method => 'get' do %>
	 <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>


<% @games.each do |game| %>
    <div class='game-container'>
        <%= game.name %><br>
        <%= link_to image_tag(game.img_url), game %>
   </div>
 <% end %>




